# ==================================
# AI Chief of Staff - Environment Configuration
# ==================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ==================================
# Application Configuration
# ==================================
API_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=1.0.0
DEBUG=true

# ==================================
# ZeroDB Configuration
# ==================================
# PostgreSQL with 60+ database service endpoints
# Includes vector search, embeddings, events, full-text search, and more
ZERODB_HOST=localhost
ZERODB_PORT=5432
ZERODB_DATABASE=founderhouse
ZERODB_USER=postgres
ZERODB_PASSWORD=your-password-here
ZERODB_API_URL=https://zerodb-api.example.com
ZERODB_API_KEY=your-zerodb-api-key

# ==================================
# Database Configuration
# ==================================
# Local development (docker-compose)
DATABASE_URL=postgresql://dev:dev@localhost:5432/founderhouse_dev

# Production (Railway will auto-populate this)
# DATABASE_URL=${{Postgres.DATABASE_URL}}

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ==================================
# Redis Configuration
# ==================================
# Local development
REDIS_URL=redis://localhost:6379/0

# Production (Railway will auto-populate this)
# REDIS_URL=${{Redis.REDIS_URL}}

# ==================================
# Security & Authentication
# ==================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================================
# CORS Configuration
# ==================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=*

# ==================================
# Logging Configuration
# ==================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ==================================
# Rate Limiting
# ==================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==================================
# MCP Integration Configuration
# ==================================

# Zoom MCP
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_WEBHOOK_SECRET=

# Slack MCP
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=
SLACK_BOT_TOKEN=

# Discord MCP
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_BOT_TOKEN=

# Microsoft Graph (Outlook) MCP
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# Monday.com MCP
MONDAY_API_KEY=

# Granola MCP
GRANOLA_API_KEY=

# Fireflies.ai MCP
FIREFLIES_API_KEY=

# Otter.ai MCP
OTTER_API_KEY=

# Loom MCP
LOOM_API_KEY=

# Notion MCP
NOTION_API_KEY=
NOTION_DATABASE_ID=

# ==================================
# AI/LLM Configuration
# ==================================
# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic Claude (alternative)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Ollama (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ==================================
# Vector Database Configuration
# ==================================
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.7

# ==================================
# Background Jobs & Scheduling
# ==================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
SCHEDULE_GRANOLA_SYNC_HOURS=6
SCHEDULE_INTEGRATION_HEALTH_CHECK_HOURS=6

# ==================================
# Email Configuration (for notifications)
# ==================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@founderhouse.ai

# ==================================
# Monitoring & Observability
# ==================================
# Sentry (error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ==================================
# Feature Flags
# ==================================
FEATURE_VOICE_ENABLED=false
FEATURE_LOOM_ENABLED=false
FEATURE_AGENT_FLOW_ENABLED=false
FEATURE_QUANTUM_FORECASTING=false

# ==================================
# Testing Configuration
# ==================================
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/founderhouse_test
TEST_REDIS_URL=redis://localhost:6379/15
TESTING=false

# ==================================
# Development Tools
# ==================================
RELOAD=true
WORKERS=1
PROFILING_ENABLED=false
