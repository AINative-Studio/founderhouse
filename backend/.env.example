# ================================
# AI Chief of Staff - Environment Configuration
# ================================

# Application Settings
APP_NAME="AI Chief of Staff API"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# API Configuration
API_V1_PREFIX="/api/v1"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-anon-key-here"
SUPABASE_SERVICE_KEY="your-service-role-key-here"  # Optional, for admin operations

# Database Configuration (Optional - Direct Postgres Connection)
# POSTGRES_URL="postgresql://postgres:password@localhost:5432/founderhouse"
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY="your-secret-key-here-minimum-32-characters-for-security"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Rate Limiting
RATE_LIMIT_REQUESTS=100  # Requests per minute per IP

# ================================
# External Service Integrations (MCP)
# ================================

# Zoom Integration
ZOOM_CLIENT_ID=""
ZOOM_CLIENT_SECRET=""
# ZOOM_REDIRECT_URI="http://localhost:8000/api/v1/integrations/zoom/callback"

# Slack Integration
SLACK_CLIENT_ID=""
SLACK_CLIENT_SECRET=""
# SLACK_REDIRECT_URI="http://localhost:8000/api/v1/integrations/slack/callback"

# Discord Integration
DISCORD_BOT_TOKEN=""
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""

# Monday.com Integration
MONDAY_API_KEY=""

# Notion Integration
NOTION_API_KEY=""
NOTION_OAUTH_CLIENT_ID=""
NOTION_OAUTH_CLIENT_SECRET=""

# Gmail/Google Integration
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Outlook/Microsoft Integration
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# Fireflies.ai Integration
FIREFLIES_API_KEY=""

# Otter.ai Integration
OTTER_API_KEY=""

# Loom Integration
LOOM_API_KEY=""
LOOM_CLIENT_ID=""
LOOM_CLIENT_SECRET=""

# Granola Integration
GRANOLA_API_KEY=""

# ZeroVoice/Twilio Integration
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ================================
# Background Tasks Configuration
# ================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_HOURS=6

# Task Queue (Optional - choose one)
# CELERY_BROKER_URL="redis://localhost:6379/0"  # For Celery
# CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# ================================
# Vector Search Configuration
# ================================
EMBEDDING_DIMENSION=1536  # OpenAI text-embedding-ada-002
VECTOR_SIMILARITY_THRESHOLD=0.7

# ================================
# AI Model Configuration
# ================================
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
# OLLAMA_BASE_URL="http://localhost:11434"

# ================================
# Additional Services
# ================================

# Redis (optional - for caching and rate limiting)
# REDIS_URL="redis://localhost:6379/0"

# Sentry (optional - for error tracking)
# SENTRY_DSN=""

# ================================
# Development Tools
# ================================

# Auto-reload on code changes
RELOAD=true

# Enable API documentation endpoints
ENABLE_DOCS=true
